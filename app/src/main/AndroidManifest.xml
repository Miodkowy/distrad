<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michal_stasinski.distrada">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Requires this permission to check the network state       -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="Distrada"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Menu.MenuActivity.NewsMenu"
            android:label="Distrada"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase Notifications -->
        <service android:name=".Service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCsiNiCN7cFN3ARj3QHbkMbAAzowhdgmh0" />
        <!--
     Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/app_icon" />
        <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity android:name=".RestaurantManager.NewsActivity" />
        <activity
            android:name=".InfoPanel.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme" />

        <activity android:name=".RestaurantManager.RestaurantManager" />
        <activity android:name=".RestaurantManager.NotificationActivity" />
        <activity android:name=".Menu.MenuActivity.BaseMenu" />
        <activity android:name=".Menu.MenuActivity.StartersMenu" />
        <activity android:name=".Menu.MenuActivity.SaladMenu" />
        <activity android:name=".Menu.MenuActivity.SoupMenu" />
        <activity android:name=".Menu.MenuActivity.PastaMenu" />
        <activity android:name=".Menu.MenuActivity.AlfornoMenu" />
        <activity android:name=".Menu.MenuActivity.MainCourseMenu" />
        <activity android:name=".Menu.MenuActivity.DrinksMenu" />
        <activity android:name=".Menu.MenuActivity.ContactMenu" />
        <activity android:name=".Menu.MenuActivity.PizzaMenu" />

        <activity android:name=".RestaurantManager.PasswordActivity"></activity>


    </application>

</manifest>