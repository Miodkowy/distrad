<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/text_reciver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="4dp" />


        <EditText
            android:id="@+id/editText_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text_reciver"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:hint="Tytuł" />

        <EditText
            android:id="@+id/editText_message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/editText_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Wiadomość"
            android:textColor="@color/colorWhite"
            android:inputType="textMultiLine" />


        <Switch
            android:id="@+id/switch_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_message"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite"
            android:text="Dźwięk powiadomienia" />

        <Button
            android:id="@+id/send_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch_button"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/cardview_dark_background"
            android:text="Wyślij"
            android:textColor="@color/colorWhite"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/send_notification"
            android:layout_marginTop="22dp"
            android:text="Medium Text" />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/text_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_notification"
            android:textSize="10dp" />

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>