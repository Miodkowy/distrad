<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
       <!-- android:background="#00000000"
        android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
       -->

        <ImageView
            android:id="@+id/blog_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="60%"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            android:src="@mipmap/add_btn"
           />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/dataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/blog_post_image"
            android:layout_below="@id/blog_post_image"
            app:layout_marginTopPercent="2%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            android:text="03.02.2017"

            android:textColor="@color/cardview_light_background"
            android:textSize="12dp" />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/blog_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataText"
            android:text="TytuÅ‚"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            android:textColor="@color/cardview_light_background"
            android:textSize="18dp" />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/blog_post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blog_post_title"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginBottomPercent="5%"
            android:text="Opis"
            android:textColor="@color/cardview_light_background"
            android:textSize="16dp" />
<!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:background="@drawable/custom_news_shape" />
            -->

    </android.support.percent.PercentRelativeLayout>



