<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.michal_stasinski.distrada.RestaurantManager.PasswordActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/text_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Witaj w panelu administratora"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="30dp" />


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Wpisz swoje dane"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/wrong_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_ALFORNO"
        android:text="Błedny login lub hasło"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:inputType="textPersonName"
        android:hint="Login"
        />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Hasło"
        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Zaloguj" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Wyjdź" />


</LinearLayout>
