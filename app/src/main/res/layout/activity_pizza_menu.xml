<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michal_stasinski.distrada.Menu.MenuActivity.PizzaMenu">


    <RelativeLayout
        android:id="@+id/main_frame_pizza"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/actionbar_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/actionbar_frame"
            android:orientation="vertical"
            android:weightSum="1">


            <com.michal_stasinski.distrada.Utils.CustomTextView
                android:id="@+id/specialText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customshape_black"
                android:text="W skład każdej pizzy(32 cm) wchodzą:\n
ser Mozzarella i sos pomidorowy"
                android:textAlignment="textEnd"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />


            <com.michal_stasinski.distrada.Utils.BounceListView
                android:id="@+id/mListView_BaseMenu"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/specialText"
                android:layout_centerVertical="true"
                android:animationCache="false"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.05sp"
                android:scrollingCache="false" />

            <Button
                android:id="@+id/addon_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/mListView_BaseMenu"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/color_PIZZA"
                android:text="Dodatki" />


        </LinearLayout>


        <ImageView
            android:id="@+id/pizza_element_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/pizza_view" />
    </RelativeLayout>

    <!--pierwszy drawer -->
    <RelativeLayout
        style="@style/NavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#cc000000">

        <include
            layout="@layout/drawer_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--drugi drawer -->
    <RelativeLayout
        android:id="@+id/drawer_left_side"
        style="@style/NavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#cc000000">

        <include
            layout="@layout/drawer_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>