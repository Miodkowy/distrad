<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michal_stasinski.distrada.Blog.BlogPost.PostActivity"
    android:background="@color/colorPostBackground">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/postDesc"
        android:background="@drawable/input_outline"
        android:padding="5dp"
        android:textSize="@dimen/post_input_field_fontsize"
        android:layout_below="@+id/postTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:hint="napisz coś" />

    <Button
        android:text="Wyślij"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_post_btn"
        android:background="@color/colorPrimary"

        android:layout_below="@+id/postDesc"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/postTitle"
        android:background="@drawable/input_outline"
        android:textSize="@dimen/post_input_field_fontsize"
        android:padding="5dp"
        android:hint="Tytuł"
        android:layout_below="@+id/imageSelect"
        android:layout_alignLeft="@+id/postDesc"
        android:layout_alignStart="@+id/postDesc"
        android:layout_alignRight="@+id/postDesc"
        android:layout_alignEnd="@+id/postDesc" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/add_btn"
        android:id="@+id/imageSelect"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    />
</RelativeLayout>
