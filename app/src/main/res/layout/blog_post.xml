<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michal_stasinski.distrada.RestaurantManager.NewsActivity">


    <RelativeLayout
        android:id="@+id/main_frame_pizza"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/actionbar_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/actionbar_frame"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageSelect"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/add_btn"
                    app:layout_heightPercent="30%" />

                <EditText
                    android:id="@+id/postTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/imageSelect"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_outline"
                    android:hint="Tytuł"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="@dimen/post_input_field_fontsize" />

                <EditText
                    android:id="@+id/postDesc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/postTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_outline"
                    android:hint="napisz coś"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="@dimen/post_input_field_fontsize" />


                <Button
                    android:id="@+id/submit_post_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postDesc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Wyślij"
                    android:textColor="@color/colorWhite" />

            </android.support.percent.PercentRelativeLayout>
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/pizza_element_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/pizza_view" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#cc000000">

        <!--draver header-->

        <ImageView
            android:id="@+id/etHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="36dp"
            android:layout_weight="0.58"
            app:srcCompat="@mipmap/logo_distrada" />

        <com.michal_stasinski.distrada.Utils.BounceListView

            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/etHeader"
            android:layout_gravity="start"
            android:background="#00000000"
            android:choiceMode="singleChoice"
            android:divider="@drawable/custom_divaider"
            android:dividerHeight="1dp"
            android:scrollbarSize="16dp"></com.michal_stasinski.distrada.Utils.BounceListView>


    </RelativeLayout>
    <!--drugi drawer -->
    <!--drugi drawer -->
    <RelativeLayout
        android:id="@+id/drawer_left_side"
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#cc000000">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--draver header-->

            <ImageView
                android:id="@+id/etHeader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"

                app:srcCompat="@mipmap/logo_distrada" />


            <ImageView
                android:id="@+id/icon_in_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etHeader1"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:srcCompat="@mipmap/app_icon" />

            <Button
                android:id="@+id/open_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_in_info"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                android:text="Wejście dla personelu" />

            <Button
                android:id="@+id/postCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_in_info"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                android:text="Utwórz wiadomość" />

            <Button
                android:id="@+id/notificationCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postCreator"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                android:text="Utwórz powiadomienie" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notificationCreator"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="2%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                android:text="Wyloguj" />
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>