<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michal_stasinski.distrada.Menu.MenuActivity.MainCourseMenu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_frame_pizza"
        >

        <LinearLayout
            android:id="@+id/actionbar_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/actionbar_frame"

            android:orientation="vertical">

            <com.michal_stasinski.distrada.Utils.CustomTextView
                android:id="@+id/addonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/customshape_black"

                android:textAlignment="textEnd"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <com.michal_stasinski.distrada.Utils.BounceListView
                android:id="@+id/mListView_BaseMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="50dp"
                android:animationCache="false"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.05sp"
                android:scrollingCache="false" />


        </LinearLayout>
        <ImageView
            android:id="@+id/pizza_element_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/pizza_view" />
    </RelativeLayout>

    <!--pierwszy drawer -->
    <RelativeLayout
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:background="#cc000000">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--draver header-->

            <ImageView
                android:id="@+id/etHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                app:layout_heightPercent="40%"
                app:srcCompat="@mipmap/logo_distrada" />

            <com.michal_stasinski.distrada.Utils.BounceListView

                android:id="@+id/left_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/etHeader"
                android:layout_gravity="start"
                android:background="#00000000"
                android:choiceMode="singleChoice"
                android:divider="@drawable/custom_divaider"
                app:layout_heightPercent="45%"
                android:dividerHeight="1dp"
                android:scrollbarSize="16dp">

            </com.michal_stasinski.distrada.Utils.BounceListView>
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>

    <!--drugi drawer -->
    <RelativeLayout
        android:id="@+id/drawer_left_side"
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:background="#cc000000">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--draver header-->

            <ImageView
                android:id="@+id/etHeader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="5%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                app:layout_heightPercent="40%"


                app:srcCompat="@mipmap/logo_distrada" />


            <ImageView
                android:id="@+id/icon_in_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etHeader1"
                android:layout_centerHorizontal="true"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="2%"
                app:srcCompat="@mipmap/app_icon" />

            <Button
                android:id="@+id/open_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_in_info"
                android:layout_centerHorizontal="true"
                android:text="Wejście dla personelu"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="2%" />

            <Button
                android:id="@+id/postCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_in_info"
                android:layout_centerHorizontal="true"
                android:text="Utwórz wiadomość"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="2%" />

            <Button
                android:id="@+id/notificationCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postCreator"
                android:layout_centerHorizontal="true"
                android:text="Utwórz powiadomienie"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="2%" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notificationCreator"
                android:layout_centerHorizontal="true"
                android:text="Wyloguj"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="2%" />
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>