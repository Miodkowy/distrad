<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    card_view:cardPreventCornerOverlap="false"
    card_view:layout_collapseParallaxMultiplier="1.0">

    <!--android:background="@color/colorPostBackground"-->
   <android.support.percent.PercentRelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <!-- android:background="#00000000"
        android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
       -->

        <ImageView
            android:id="@+id/blog_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="1%"
            app:layout_marginLeftPercent="0.1%"
            app:layout_marginRightPercent="0.1%"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            android:src="@mipmap/add_btn"
           />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/dataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/blog_post_image"
            android:layout_below="@id/blog_post_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="03.02.2017"

            android:textColor="@color/cardview_light_background"
            android:textSize="12dp" />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/blog_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataText"
            android:layout_marginTop="5dp"
            android:text="TytuÅ‚"
            android:padding="10dp"
            android:textColor="@color/cardview_light_background"
            android:textSize="18dp" />

        <com.michal_stasinski.distrada.Utils.CustomTextView
            android:id="@+id/blog_post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blog_post_title"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Opis"
            android:textColor="@color/cardview_light_background"
            android:textSize="16dp" />
<!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:background="@drawable/custom_news_shape" />
            -->

    </android.support.percent.PercentRelativeLayout>


</android.support.v7.widget.CardView>

