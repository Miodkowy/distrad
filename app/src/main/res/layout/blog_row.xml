<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPostBackground"
    card_view:cardPreventCornerOverlap="false"
    card_view:layout_collapseParallaxMultiplier="1.0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/blog_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_btn" />

        <com.michal_stasinski.distrada.Menu.CustomTextView
            android:id="@+id/dataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/blog_post_image"
            android:layout_below="@id/blog_post_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="03.02.2017"
            android:textColor="@color/cardview_light_background"
            android:textSize="22sp" />

        <com.michal_stasinski.distrada.Menu.CustomTextView
            android:id="@+id/blog_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataText"
            android:layout_marginTop="10dp"
            android:text="TytuÅ‚"
            android:textColor="@color/cardview_light_background"
            android:textSize="22sp" />

        <com.michal_stasinski.distrada.Menu.CustomTextView
            android:id="@+id/blog_post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blog_post_title"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Opis"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blog_post_desc"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_news_shape" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

