<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--draver header-->

    <ImageView
        android:id="@+id/etHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/logo" />


    <ImageView
        android:id="@+id/icon_in_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etHeader1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/app_icon" />

    <com.michal_stasinski.distrada.Utils.CustomTextView
        android:id="@+id/version_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_in_info"
        android:layout_marginTop="10dp"
        android:text="'di Strada Gdynia' ver 1.0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/postCreator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_drawer_shape"
        android:fontFamily="Arial"
        android:text="Utwórz wiadomość"
        android:textColor="@color/colorWhite" />


    <Button
        android:id="@+id/notificationCreator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postCreator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_drawer_shape"
        android:fontFamily="Arial"
        android:text="Utwórz powiadomienie"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationCreator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_drawer_shape"
        android:fontFamily="Arial"
        android:text="Wyloguj"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/customshape_alpha"
        android:fontFamily="Arial"
        android:text="Administrator"
        android:textColor="#848181"
        android:textSize="10dp" />

    <ImageButton
        android:id="@+id/urlButton"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/admin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/monimax" />
</RelativeLayout>