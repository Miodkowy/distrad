<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.RightMenu.NewsCreator">


    <RelativeLayout
        android:id="@+id/main_frame_pizza"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/actionbar_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/actionbar_frame"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageSelect"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/add_btn"
                    app:layout_heightPercent="30%" />

                <EditText
                    android:id="@+id/postTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/imageSelect"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_outline"
                    android:hint="Tytuł"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="@dimen/post_input_field_fontsize" />

                <EditText
                    android:id="@+id/postDesc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/postTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_outline"
                    android:hint="napisz coś"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="@dimen/post_input_field_fontsize" />


                <Button
                    android:id="@+id/submit_post_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postDesc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Wyślij"
                    android:textColor="@color/colorWhite" />

            </android.support.percent.PercentRelativeLayout>
            />
        </LinearLayout>

        <ImageView
            android:id="@+id/pizza_element_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/pizza_view" />
    </RelativeLayout>

    <!--pierwszy drawer -->
    <RelativeLayout
        style="@style/NavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#cc000000">

        <include
            layout="@layout/custom_drawer_left_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--drugi drawer -->
    <RelativeLayout
        android:id="@+id/drawer_left_side"
        style="@style/NavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#cc000000">

        <include
            layout="@layout/custom_drawer_right_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>