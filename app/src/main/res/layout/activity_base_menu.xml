<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michal_stasinski.distrada.Menu.MenuActivity.BaseMenu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_frame_pizza"
        >

        <LinearLayout
            android:id="@+id/actionbar_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/actionbar_frame"

            android:orientation="vertical">



            <com.michal_stasinski.distrada.Utils.BounceListView
                android:id="@+id/mListView_BaseMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_centerVertical="true"
                android:animationCache="false"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.05sp"
                android:scrollingCache="false" />


        </LinearLayout>
        <ImageView
            android:id="@+id/pizza_element_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/pizza_view" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#cc000000">

        <!--draver header-->

        <ImageView
            android:id="@+id/etHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="36dp"
            android:layout_weight="0.58"
            app:srcCompat="@mipmap/logo_distrada" />

        <com.michal_stasinski.distrada.Utils.BounceListView

            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/etHeader"
            android:layout_gravity="start"
            android:background="#00000000"
            android:choiceMode="singleChoice"
            android:divider="@drawable/custom_divaider"
            android:dividerHeight="1dp"
            android:scrollbarSize="16dp"></com.michal_stasinski.distrada.Utils.BounceListView>
    </RelativeLayout>

    <!--drugi drawer -->
    <RelativeLayout
        android:id="@+id/drawer_left_side"
        style="@style/NavDrawer"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#cc000000">

        <!--draver header-->

        <ImageView
            android:id="@+id/etHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="36dp"
            android:layout_weight="0.58"
            app:srcCompat="@mipmap/logo_distrada" />


        <ImageView
            android:id="@+id/icon_in_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/etHeader1"
            app:srcCompat="@mipmap/app_icon" />

        <Button
            android:id="@+id/open_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/icon_in_info"
            android:text="Wejście dla personelu" />
        <Button
            android:id="@+id/postCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/open_manager"
            android:text="Utwórz wiadomość" />
        <Button
            android:id="@+id/notificationCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/postCreator"
            android:text="Utwórz powiadomienie" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/notificationCreator"
            android:text="Wyloguj" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>