<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.michal_stasinski.distrada.Utils.CustomTextView
        android:id="@+id/specialText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customshape_black"
        android:text="Ceny za kÄ…zdy dodatek"
        android:textAlignment="textEnd"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />


    <com.michal_stasinski.distrada.Utils.BounceListView
        android:id="@+id/mListView_BaseMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/specialText"
        android:layout_centerVertical="true"
        android:animationCache="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.05sp"
        android:layout_marginBottom="10dp"
        android:scrollingCache="false" />

    <Button
        android:id="@+id/addon_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mListView_BaseMenu"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/color_PIZZA"
        android:text="Pizza" />

</LinearLayout>